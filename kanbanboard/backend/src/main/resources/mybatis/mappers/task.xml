<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="task">

  <select id="findTaskList" parameterType="long" resultType="taskvo">
    <![CDATA[
    SELECT no, name, done
    FROM task
    WHERE card_no = #{cardNo}
    ORDER BY no DESC
    ]]>
</select>
	
	 
<insert id="createTask" parameterType="taskvo">
	<![CDATA[
	insert into task values (null, #{name }, #{done}, #{card_no })
	]]>
</insert>

<update id="updateStatus" parameterType="map">
    UPDATE task
    SET done = #{done}
    WHERE no = #{no}
</update>

   <delete id="deleteTask" parameterType="long">
    <![CDATA[
    DELETE FROM task
    WHERE no = #{no}
    ]]>
</delete>

</mapper>